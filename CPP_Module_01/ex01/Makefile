CXX = c++
CXXFLAGS = -Wall -Wextra -Werror -std=c++98
NAME = zombieHorde
SRCS = main.cpp \
		Zombie.cpp \
		zombieHorde.cpp

HEADER = Zombie.hpp
OBJS = $(SRCS:.cpp=.o)

.PHONY: all clean fclean re

all: $(NAME)

$(NAME): $(OBJS)
	$(CXX) $(CXXFLAGS) $(OBJS) -o $(NAME)

%.o : %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	rm -rf $(OBJS)

fclean: clean
	rm -rf $(NAME)

re: fclean all